<h1>Pages</h1>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th>ID</th>
			<th>Page Name</th>
			<th>Actions <span class="pull-right"><%= link_to 'Add New Page', new_page_path, title: 'Add a new page', class: 'btn-primary btn-small ' %> </span> </th>
			<tbody>
				<% @pages.each do |page| %>
				<tr>
					<td><%= page.id %></td>
					<td><%= link_to page.name, page_path(page) %></td>
					<td>
						<p><%= link_to 'Edit', edit_page_path(page), class: 'btn btn-success btn-small'%> <%= link_to 'Delete', page_path(page), method: :delete, confirm: 'Are you sure!', class: 'btn btn-danger btn-small'%> </p>
					</td>
				</tr>
				<% end -%>
			</tbody>
		</tr>
	</thead>
</table>