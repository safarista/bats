<h1>Edit <%= @page.name %> </h1>

<%= form_for @page, html: {class: 'form-horizontal'} do |f| -%>
    <div class="control-group">
    <%= f.label :name, 'Page Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, required: true, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :content, 'Page Content', :class => 'control-label' %>
    <div class="controls">
      <%= f.cktext_area :content, toolbar: 'Full', input_html: {class: 'span6', rows: 9} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                {controller: :pages, action: :index}, :class => 'btn' %>
  </div>
<% end -%>