<%= simple_form_for(@booking, html: {class: 'form-horizontal' }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <%= f.input :group_size, input_html: { required: true } %>
        <%= f.input :arrival_date, as: :date, input_html: { required: true}  %>
        <%= f.input :departure, as: :date, input_html: { required: true} %>
        <%= f.input :contact_address, input_html: { class: 'span6', rows: 10, required: true } %>
        <%= f.input :contact_phone, input_html: { required: true } %>
        <%= f.input :contact_email, input_html: { required: true } %>
        <%= f.input :additional_info, input_html: { class: 'span6', rows: 16 } %>
    </div>

    <div class="form-actions">
        <%= f.button :submit %>
    </div>
<% end %>
