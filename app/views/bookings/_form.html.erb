<%= simple_form_for(@booking) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :group_size %>
    <%= f.input :arrival_date,  %>
	<%= f.input :departure %>
	<%= f.input :contact_address, input_html: {class: 'span6', rows: 10} %>
	<%= f.input :contact_phone %>
	<%= f.input :contact_email %>
	<%= f.input :additional_info, input_html: {class: 'span6', rows: 16} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
