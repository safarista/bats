<%= form_for @safari, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, 'Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, required: true, :class => 'span4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.cktext_area :description, toobar: 'Basic', class: 'span6', rows: 9 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                safaris_path, :class => 'btn' %>
  </div>
<% end %>
